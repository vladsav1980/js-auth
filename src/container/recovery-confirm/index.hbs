{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{>back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Recovery Confirm Page</h1>

        <div class="form">
            <div class="form__item">
                {{>field placeholder="Your code" action="recoveryConfirmForm.change" label="Code" type="number"
                name="code" }}
                <span name="email" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Enter new password" action="recoveryConfirmForm.change" label="New
                password"
                type="password"
                name="password"}}
                <span name="password" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Repeat new password" label="New password again"
                action="recoveryConfirmForm.change"
                type="password"
                name="passwordAgain"}}
                <span name="passwordAgain" class="form__error">Error</span>
            </div>
        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Renew your
            password</button>
        <span class="alert alert--disabled">Attention, error!</span>
    </form>
</div>

