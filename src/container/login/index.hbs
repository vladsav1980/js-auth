{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{>back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Login</h1>

        <div class="form">
            <div class="form__item">
                {{>field action="signupForm.change" label="E-mail" type="email" name="email" placeholder="Your e-mail"}}
                <span name="email" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Enter your password" action="signupForm.change" label="Password"
                type="password"
                name="password"}}
                <span name="password" class="form__error">Error</span>
            </div>

        </div>

        <button onclick="signupForm.submit()" class="button button--disabled" type="button">Login</button>
        <span class="alert alert--disabled">Attention, error!</span>
        <span class="link__prefix">Forgot your password? <a href="/recovery" class="link">Recover</a></span>
    </form>
</div>

